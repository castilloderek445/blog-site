---
import {Image} from "astro:assets"

interface Props {
	subtitle: string;
}

const { subtitle= ""} = Astro.props;
---


<header
    class="flex justify-between items-center px-24 py-6 max-sm:px-5 max-sm:py-10 max-w-7xl justify-self-center w-full"
>
    
    <a href="/" class="flex gap-x-4 items-center">
        <Image
            src="/images/angler.png"
            alt="blog logo"
            width={64}
            height={64}
            format="webp"
            class="w-16"
        />

        <p class="text-white font-semibold">Unspoken Swag <span class="text-white font-light">{subtitle}</span></p>
    </a>
    <ul class="flex gap-x-8">
        <li><a href="/" class="text-white font-semibold">Home</a></li>
        <li><a href="/blog" class="text-white font-semibold">Blog</a></li>
        <li><a href="/about" class="text-white font-semibold">About</a></li>
    </ul>
</header>